<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.leilopez.popmovies.DetailFragment">

    <TextView
        android:id="@+id/detail_title"
        android:text="@string/hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="56sp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:layout_alignParentTop="true"/>
    <!-- TODO set textSize to something in style, depending on length of title-->

    <ImageView
        android:id="@+id/detail_image"
        android:src="@drawable/sample_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/detail_title"/>

    <TextView
        android:id="@+id/detail_date"
        android:text="@string/detail_date_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/detail_title"
        android:layout_toRightOf="@id/detail_image"/>

    <TextView
        android:id="@+id/detail_vote"
        android:text="@string/detail_vote_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/detail_date"
        android:layout_toRightOf="@id/detail_image" />

    <TextView
        android:id="@+id/detail_overview"
        android:text="@string/detail_overview_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/detail_image"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"/>

</RelativeLayout>
